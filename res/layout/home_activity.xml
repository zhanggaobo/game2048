<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:id="@+id/container"
              android:background="@color/all_bg">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            >

        <LinearLayout
                android:id="@+id/home_current_linear"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/shape_title_bg"
                android:orientation="vertical"
                >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="当前"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    />

            <TextView
                    android:id="@+id/home_current_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textSize="25dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/home_record_linear"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/shape_title_bg"
                android:orientation="vertical"
                >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="记录"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    />

            <TextView
                    android:id="@+id/home_record_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textSize="25dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/home_reset_linear"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/shape_title_bg"
                android:orientation="vertical"
                >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="重置"
                    android:textSize="25dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
            android:id="@+id/gameContainer"
            android:layout_width="328dp"
            android:layout_height="328dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            >

        <com.zhanggb.game2048.view.MyGameView
                android:id="@+id/gameView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
        </com.zhanggb.game2048.view.MyGameView>

        <com.zhanggb.game2048.view.MyAnimLayer
                android:id="@+id/animLayer"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
        </com.zhanggb.game2048.view.MyAnimLayer>
    </FrameLayout>

    <RelativeLayout
            android:id="@+id/feiwo_banner_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom">
    </RelativeLayout>
</LinearLayout>